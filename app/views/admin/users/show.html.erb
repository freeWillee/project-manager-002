<div id="project-container">
  <p><button type="button">Show Projects</button></p>

  <!-- Show project list-->
  <h4>Project List: </h4>
  <% if @user.projects.empty? %>
    <p>There are currently no projects to show</p>
  <% else %>
    <%= render partial: '/admin/projects/list', locals:{user: @user} %>
  <% end %>
</div>

<div id="delete-user">
  <%= form_for @user, url: admin_user_path, method: :delete do |f| %>
    <%= f.submit "Delete user" %><br/>
  <% end %>
</div>
