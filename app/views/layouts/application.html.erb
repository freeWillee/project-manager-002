<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagerV002</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

  <!-- template for Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
          <div class="navbar-header">
            <%= link_to "Signup", new_user_path, class: "navbar-brand" %>
            <%= link_to "Login", login_path, class: "navbar-brand" %>
            
          </div>
      </div>
    </div>
    <div class="center">
      <!-- <div class="info"> -->
        <div class="container">
        <!-- show error messages if any -->
        <% flash.each do |key, value| %>
          <% if value.class == Array %>
            <% value.each do |message|%>
              <%= content_tag :div, message %>
            <% end%>
          <% else %>
            <%= content_tag :div, value, class: "flash #{key}" %>
          <% end %>
        <% end %> <!-- flash errors end -->
        <%= yield %>
        </div>
      <!-- </div> -->
    </div>

  </body>

  <!-- Footer template -->
  <footer class="center">
		<p>Helpful Research Resources:<br>
			<a href="http://wikipedia.org" >Wikipedia</a><br>
			<a href="http://google.com" >Google it!</a><br>
			<a href="mailto: support@systems.com">Email Support</a>
		</p>
	</footer>

</html>
