<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagerV002</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


  <!-- template for Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Projects Dashboard", admin_projects_path, class: "navbar-brand" %>
          <%= link_to "All Users", admin_users_path, class: "navbar-brand" %>
          <%= link_to "All Tasks", admin_tasks_path, class: "navbar-brand" %>          
          <% if !Project.all.empty? %>
            <%= link_to "Create Task", new_admin_task_path, class: "navbar-brand" %>
          <% end %>
          <%= link_to "Create User", new_admin_user_path, class: "navbar-brand" %>
          <%= link_to "Create Project", new_admin_project_path, class: "navbar-brand" %> 
          <%= link_to "Logout", logout_path, class: "navbar-brand" %>
        </div>
      </div>
    </div>
    <div class="center">
      <!-- <div class="info"> -->
        <div class="container">
        <h2>You are logged in as an Administrator</h2>
        <!-- show error messages if any -->
        <% flash.each do |key, value| %>
          <% if value.class == Array %>
            <% value.each do |message|%>
              <%= content_tag :div, message %>
            <% end%>
          <% else %>
            <%= content_tag :div, value, class: "flash #{key}" %>
          <% end %>
        <% end %> <!-- flash errors end -->
        <%= yield %>
        </div>
      <!-- </div> -->
    </div>
  <!-- Footer template -->
    <footer class="center">
        <h5>Helpful Research Resources:</h5>
        <a href="http://wikipedia.org" >Wikipedia</a><br>
        <a href="http://google.com" >Google it!</a><br>
        <a href="mailto: support@systems.com">Email Support</a>
    </footer>

  </body>
</html>
