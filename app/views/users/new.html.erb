  <h1>Create New User</h1>

  <%= form_for @user, html:{class:"new_user", id: "new_user"} do |f| %>

<!-- Username -->
  <div class="form-group">
    <%= f.label :username%><br>
    <%= f.text_field :username, placeholder: "Enter username", class:"form-control"%>
  </div>
<!-- Email -->
  <div class="form-group">
    <%= f.label :email%><br>
    <%= f.text_field :email, placeholder: "Enter email address", class:"form-control"%>
  </div>
<!-- Password -->
  <div class="form-group">
    <%= f.label :password, "Enter password" %><br>
    <%= f.password_field :password, placeholder: "Enter password", class:"form-control"%>
  </div>

  <!-- Admin? -->
  <div class="form-group">
    <%= f.label :admin, "Are you an administrator? " %>
    <%= f.check_box :admin%>
  </div>

  <%= f.submit %><br>
<% end %>
